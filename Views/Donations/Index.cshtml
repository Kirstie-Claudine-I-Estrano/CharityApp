@model IEnumerable<CharityApp.Models.Donation>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center my-4 text-primary">Donation List</h1>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.DonorName)</th>
                <th>@Html.DisplayNameFor(model => model.DonorEmail)</th>
                <th>@Html.DisplayNameFor(model => model.Amount)</th>
                <th>@Html.DisplayNameFor(model => model.GcashNumber)</th>
                <th>@Html.DisplayNameFor(model => model.DonationDate)</th>
                <th>@Html.DisplayNameFor(model => model.Message)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.IsAnonymous)
                        {
                            <span>Anonymous</span>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.DonorName)
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.DonorEmail)</td>
                    <td>@item.Amount.ToString("C", new System.Globalization.CultureInfo("en-PH"))</td>
                    <td>@Html.DisplayFor(modelItem => item.GcashNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.DonationDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Message)</td>
                    <td>
                        <!-- Edit Button with Pen Icon -->
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-pen"></i> Edit
                        </a> |

                        <!-- View Button with Eye Icon -->
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> View
                        </a> |

                        <!-- Delete Button with Trash Icon -->
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this donation?');">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
